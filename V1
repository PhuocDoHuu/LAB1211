def draw_diamond(N):
    for i in range(N):
        if i == 0:
            print(" " * (N - i - 1) + "*")
        else:
            print(" " * (N - i - 1) + "*" + " " * (2 * i - 1) + "*")

    for i in range(N - 2, -1, -1):
        if i == 0:
            print(" " * (N - i - 1) + "*")
        else:
            print(" " * (N - i - 1) + "*" + " " * (2 * i - 1) + "*")

N = int(input("Nhap vao N: "))
draw_diamond(N)




